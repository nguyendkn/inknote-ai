{
  "name": "inknote-ai",
  "version": "0.1.0",
  "private": true,
  "main": "dist-electron/electron/main.js",
  "author": "Dao Khoi Nguyen",
  "description": "inknote-ai",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "electron:dev": "concurrently -k \"npm run dev\" \"npm run electron:watch\"",
    "electron:watch": "wait-on http://localhost:3000 && npm run electron:compile && cross-env NODE_ENV=development electron .",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:build": "npm run build && npm run electron:compile && electron-builder",
    "electron:build:win": "npm run build && npm run electron:compile && electron-builder --win",
    "electron:build:mac": "npm run build && npm run electron:compile && electron-builder --mac",
    "electron:build:linux": "npm run build && npm run electron:compile && electron-builder --linux"
  },
  "build": {
    "appId": "inknote-ai",
    "productName": "inknote-ai",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist-electron/**/*",
      "out/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "nguyendkn",
      "repo": "inknote-ai"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/icon.ico",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@google/genai": "^1.39.0",
    "better-sqlite3": "^12.6.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "lucide-react": "^0.563.0",
    "next": "16.1.5",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^10.1.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.30",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^35.7.5",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "wait-on": "^8.0.5"
  }
}
